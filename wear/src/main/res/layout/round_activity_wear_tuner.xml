<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chernowii.weartuner.WearTuner"
    tools:deviceIds="wear_round">

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frequency_slider"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:indeterminate="false"
        android:max="20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tune: "
        android:id="@+id/textView3"
        android:layout_below="@+id/frequency_slider"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="mHz"
        android:id="@+id/mhzFreq"
        android:layout_below="@+id/frequency_slider"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/reference"
        android:layout_below="@+id/mhzFreq"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-10 Hz"
        android:id="@+id/minusTenHz"
        android:layout_below="@+id/textView3"
        android:layout_toStartOf="@+id/reference" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+10 Hz"
        android:id="@+id/plusTenHz"
        android:layout_alignTop="@+id/reference"
        android:layout_toEndOf="@+id/minusTenHz" />

</RelativeLayout>
